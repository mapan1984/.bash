#!/usr/bin/python3
# encoding: utf-8

"""输不需要同步的bash配置文件"""

import os
import sys

# 需要同步的配置文件
config_file='.bash_profile .bashrc .bash_logout bin .gitconfig .gitignore'

def ignore_file():
    global confing_file
    for file in os.listdir('/home/mapan/'):
        if file not in config_file.split(" "):
            print(file)

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: up_helper [ignore|config]")
    else:
        if(sys.argv[1] == "ignore"):
            ignore_file()
        elif(sys.argv[1] == "config"):
            print(config_file)
        else:
            print("Usage: up_helper [ignore|config]")
