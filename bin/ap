#!/bin/bash

# 把任何地方的文章按jekyll文章命名要求命名，
# 并移至我的blog文章目录下

_posts=${BREAK}e/mapan1984/_posts # 文章目录

function err(){  # 提示错误函数
  echo "[$(date)]: $@" 1>&2
}

case $# in
  0) echo 'Usage: ap [-categories] filename' 1>&2; exit 1 ;;
  1) err "Usage: ap [-categories] filename"; exit 2 ;;
  2) 
    categories=$1; 
    filename=$2; 
    set `date "+%Y %B %d"`; y=$1; m=$2; d=$3; # have categories args; use today
    case $categories in
      -m*) categories=manual ;;
      -n*) categories=network ;;
      -p*) categories=program ;;
      -s*) categories=system ;;
      -t*) categories=tool ;;
    esac
    ;;
esac

case $m in
  jan*|Jan*) m=01 ;;
  feb*|Feb*) m=02 ;;
  mar*|Mar*) m=03 ;;
  apr*|Apr*) m=04 ;;
  may*|May*) m=05 ;;
  jun*|Jun*) m=06 ;;
  jul*|Jul*) m=07 ;;
  aug*|Aug*) m=08 ;;
  sep*|Sep*) m=09 ;;
  oct*|Oct*) m=10 ;;
  nov*|Nov*) m=11 ;;
  dec*|Dec*) m=12 ;;
esac

newfilename=$(echo "$y-$m-$d-${filename}") # 按日期命名文件

if test -f $filename        ## 如果是一个文件
then
  mv $filename $_posts/$categories/$newfilename
  exit 0
else
  echo "Error: $filename is not a file" 1>&2
  exit 1
fi
